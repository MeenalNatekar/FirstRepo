<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/script.js")" type="text/javascript"></script>
        <link rel="stylesheet" href="@Url.Content("~/Content/styles.css")" type="text/css"/>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Human Resource Management System", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav id="cssmenu">
                        <ul>
                            <li class="active has-sub">
                                <a href="#">Maintainance</a>
                                <ul>
                                    <li><a href="#">User Management</a></li>
                                    <li><a href="#">Employee</a></li>
                                    <li><a href="#">Client</a></li>
                                    <li><a href="#">Project</a>
                                    <ul>
                                        <li><a href="#">Add Project</a></li>
                                        <li><a href="#">Assign Project</a></li>
                                    </ul>
                                    </li>
                                </ul>
                            </li>
                        <li><a href="#">Recruitment</a>
                            <ul>
                                <li><a href="#">Job Application</a></li>
                                <li><a href="#">New Vacancies</a></li>
                            </ul>    
                        </li>
                        <li><a href="#">Performance</a>
                            <ul>
                                <li><a href="#">Appraisal</a></li>
                                <li><a href="#">Review Goals</a></li>
                                <li><a href="#">Client Feedback</a></li>
                            </ul> 
                        </li>
                        <li><a href="#">Leave</a>
                            <ul>
                                <li><a href="#">Leave List</a></li>
                                <li><a href="#">Total Leave for Year</a></li>
                                <li><a href="#">Leave Availed</a></li>
                                <li><a href="#">Leave Balance</a></li>
                            </ul>
                            </li>
                        <li><a href="#">Payroll</a>
                            <ul>
                                <li><a href="#">Pay Slip</a></li>
                            </ul>
                        </li>                        
                    </ul>
                </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
